{
  "name": "deprem-server",
  "script": "server.js",
  "instances": 1,
  "autorestart": true,
  "watch": true,
  "watch_delay": 1000,
  "ignore_watch": [
    "node_modules",
    "logs",
    ".git"
  ],
  "max_memory_restart": "1G",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3000
  },
  "log_file": "./logs/app.log",
  "out_file": "./logs/out.log",
  "error_file": "./logs/error.log",
  "merge_logs": true,
  "time": true
}
