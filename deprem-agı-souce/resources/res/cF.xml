        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/margin_m" android:paddingRight="@dimen/margin_m" android:paddingBottom="@dimen/margin_l" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:paddingHorizontal="@dimen/margin_m">
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_open_app_details_positive" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_catalog_details" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_uninstall_positive" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dialogo_app_selected_uninstall" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_virus_report_positive" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/virustotal_safety_report_title" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_rollback_positive" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/rollback_title" android:maxLines="1"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <View android:id="@+id/v_outside_header" android:layout_width="match_parent" android:layout_height="30dp"/>
        <ImageView android:id="@+id/iv_icon" android:layout_width="@dimen/icon_size_l" android:layout_height="@dimen/icon_size_l" android:adjustViewBounds="true" android:layout_centerHorizontal="true" android:contentDescription="@null" app:srcCompat="@drawable/vector_uptodown_logo_disabled"/>
        <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/text_primary" android:id="@+id/tv_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_m" android:layout_marginBottom="@dimen/margin_m" android:text="@string/app_name" android:layout_below="@+id/iv_icon" android:layout_centerHorizontal="true" android:layout_marginVertical="@dimen/margin_m"/>
    </RelativeLayout>
</RelativeLayout>
