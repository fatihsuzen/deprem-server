<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_username_edit" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize">
        <TextView android:id="@+id/tv_title_toolbar_username_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/username_edit_title" style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/margin_m" android:paddingTop="@dimen/margin_m" android:paddingRight="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar_username_edit" android:paddingHorizontal="@dimen/margin_m">
        <EditText android:textSize="@dimen/text_size_l" android:textColor="@color/text_primary" android:textColorHint="@color/main_light_grey" android:id="@+id/et_username_edit" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="@string/username_edit_new" android:maxLength="@integer/max_length_username" android:drawablePadding="@dimen/margin_m" android:inputType="textEmailAddress" android:textCursorDrawable="@null" android:autofillHints="emailAddress" app:drawableStartCompat="@drawable/vector_user_default_grey"/>
        <View android:background="@color/et_stroke_color" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_min_chars_user_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_l" android:text="@string/validation_three_chars_min" android:maxLines="1" android:drawablePadding="@dimen/margin_s"/>
        <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_max_chars_user_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_s" android:text="@string/validation_hundred_chars_max" android:maxLines="1" android:drawablePadding="@dimen/margin_s"/>
        <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_type_chars_user_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_s" android:text="@string/validation_username_chars_type" android:maxLines="1" android:drawablePadding="@dimen/margin_s"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_turbo_username_type_user_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_l">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_turbo_separator_user_edit" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_turbo_username_title_user_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/turbo_select_username_type"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_turbo_avatar_title_user_edit" android:paddingLeft="@dimen/margin_m" android:paddingRight="@dimen/margin_m" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@null" android:paddingHorizontal="@dimen/margin_m" app:srcCompat="@drawable/vector_turbo"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_turbo_username_styles_locked_user_edit" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_s"/>
            <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_m" android:dividerPadding="@dimen/margin_m">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RadioButton android:textSize="@dimen/text_size_m" android:ellipsize="end" android:id="@+id/rb_turbo_type_0" android:paddingTop="@dimen/margin_m" android:paddingBottom="@dimen/margin_m" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:paddingVertical="@dimen/margin_m" style="@style/RadioButtonLayout"/>
                    <com.uptodown.util.views.UsernameTextView android:textSize="@dimen/text_size_l" android:textColor="@color/text_terciary" android:ellipsize="end" android:id="@+id/tv_username_type_0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_turbo_type_1" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RadioButton android:textSize="@dimen/text_size_m" android:ellipsize="end" android:id="@+id/rb_turbo_type_1" android:paddingTop="@dimen/margin_m" android:paddingBottom="@dimen/margin_m" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:paddingVertical="@dimen/margin_m" style="@style/RadioButtonLayout"/>
                    <com.uptodown.util.views.UsernameTextView android:textSize="@dimen/text_size_l" android:ellipsize="end" android:id="@+id/tv_username_type_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_lock_username_type_1" android:visibility="gone" android:layout_width="@dimen/icon_size_s" android:layout_height="@dimen/icon_size_s" android:contentDescription="@null" android:layout_marginStart="@dimen/margin_s" app:srcCompat="@drawable/vector_locked"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_turbo_type_2" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RadioButton android:textSize="@dimen/text_size_m" android:ellipsize="end" android:id="@+id/rb_turbo_type_2" android:paddingTop="@dimen/margin_m" android:paddingBottom="@dimen/margin_m" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:paddingVertical="@dimen/margin_m" style="@style/RadioButtonLayout"/>
                    <com.uptodown.util.views.UsernameTextView android:textSize="@dimen/text_size_l" android:ellipsize="end" android:id="@+id/tv_username_type_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_lock_username_type_2" android:visibility="gone" android:layout_width="@dimen/icon_size_s" android:layout_height="@dimen/icon_size_s" android:contentDescription="@null" android:layout_marginStart="@dimen/margin_s" app:srcCompat="@drawable/vector_locked"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_turbo_type_3" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RadioButton android:textSize="@dimen/text_size_m" android:ellipsize="end" android:id="@+id/rb_turbo_type_3" android:paddingTop="@dimen/margin_m" android:paddingBottom="@dimen/margin_m" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:paddingVertical="@dimen/margin_m" style="@style/RadioButtonLayout"/>
                    <com.uptodown.util.views.UsernameTextView android:textSize="@dimen/text_size_l" android:ellipsize="end" android:id="@+id/tv_username_type_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_lock_username_type_3" android:visibility="gone" android:layout_width="@dimen/icon_size_s" android:layout_height="@dimen/icon_size_s" android:contentDescription="@null" android:layout_marginStart="@dimen/margin_s" app:srcCompat="@drawable/vector_locked"/>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
        <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_username_edit_change" android:background="@drawable/ripple_blue_primary_button" android:paddingLeft="@dimen/margin_l" android:paddingTop="@dimen/margin_m" android:paddingRight="@dimen/margin_l" android:paddingBottom="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_l" android:text="@string/save" android:textAllCaps="true" android:textAlignment="center" android:paddingHorizontal="@dimen/margin_l" android:paddingVertical="@dimen/margin_m"/>
    </LinearLayout>
    <include android:id="@+id/loading_view_username_edit" layout="@layout/core_loading_view"/>
</RelativeLayout>
