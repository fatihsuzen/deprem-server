<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/bottom_bar_height">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize" android:layout_marginStart="@dimen/margin_m">
            <TextView android:textSize="@dimen/font_size_16" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_title_ff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/my_feed" android:maxLines="1" android:lines="1" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/rl_avatar_user_ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/margin_l" android:layout_alignParentEnd="true">
                <ImageView android:id="@+id/iv_avatar_user_ff" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="2dp" android:layout_centerInParent="true" android:contentDescription="@null" app:srcCompat="@drawable/vector_user_profile"/>
                <ImageView android:id="@+id/iv_badge_user_ff" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="-2dp" android:layout_alignTop="@+id/iv_avatar_user_ff" android:contentDescription="@null" android:layout_marginEnd="-2dp" android:layout_alignEnd="@+id/iv_avatar_user_ff" app:srcCompat="@drawable/shape_notifications_bubble"/>
            </RelativeLayout>
        </RelativeLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/srl_feed" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_feed" android:layout_width="match_parent" android:layout_height="match_parent" android:nestedScrollingEnabled="false"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/text_size_xl" android:textColor="@color/text_secundary" android:gravity="center" android:id="@+id/tv_no_data_feed" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_m" android:text="@string/feed_has_no_content" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_login_ff" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_centerVertical="true" android:layout_marginHorizontal="20dp" android:paddingHorizontal="20dp" android:paddingVertical="20dp">
        <TextView android:textSize="@dimen/text_size_m" android:textColor="@drawable/selector_category_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_login_google_ff" android:background="@drawable/ripple_wizard_login_button" android:padding="@dimen/margin_l" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_l" android:text="@string/login_with_google" android:maxLines="2" android:drawablePadding="@dimen/margin_l" android:textAllCaps="true" app:drawableStartCompat="@drawable/vector_logo_google"/>
        <TextView android:textSize="@dimen/text_size_m" android:textColor="@drawable/selector_category_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_login_email_ff" android:background="@drawable/ripple_wizard_login_button" android:padding="@dimen/margin_l" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login_with_email" android:maxLines="2" android:drawablePadding="@dimen/margin_l" android:textAllCaps="true" app:drawableStartCompat="@drawable/selector_icon_email"/>
    </LinearLayout>
    <include android:id="@+id/loading_view_feed" layout="@layout/core_loading_view"/>
</RelativeLayout>
