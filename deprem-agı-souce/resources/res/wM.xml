<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingBottom="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/bg_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_m" android:layout_marginTop="-70dp" android:layout_marginRight="@dimen/margin_m" android:layout_below="@+id/rl_header" android:layout_marginHorizontal="@dimen/margin_m">
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/margin_m" android:paddingRight="@dimen/margin_m" android:paddingBottom="@dimen/margin_l" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:paddingHorizontal="@dimen/margin_m">
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/main_blue" android:ellipsize="end" android:id="@+id/tv_title_download_general_management" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/general_title" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_open_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/option_button_install" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_select_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/select_item" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_pause_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/action_pause" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_app_details_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_catalog_details" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_open_containing_folder_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/option_open_containing_folder" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_delete_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/option_button_delete" android:maxLines="1"/>
                <View android:background="@color/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/margin_m" android:layout_marginTop="@dimen/margin_s" android:layout_marginRight="@dimen/margin_m" android:layout_marginBottom="@dimen/margin_s" android:layout_marginHorizontal="@dimen/margin_m" android:layout_marginVertical="@dimen/margin_s"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/main_blue" android:ellipsize="end" android:id="@+id/tv_title_download_sharing" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sharing_title" android:maxLines="1"/>
                <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_primary" android:ellipsize="end" android:id="@+id/tv_share_ddo" android:background="@drawable/core_ripple_bg_card" android:padding="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/option_button_share" android:maxLines="1"/>
            </LinearLayout>
        </ScrollView>
        <View android:background="@drawable/shape_shadow_myappsupdates_dialog" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginTop="60dp"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/rl_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <View android:id="@+id/v_outside_header" android:layout_width="match_parent" android:layout_height="30dp"/>
        <ImageView android:id="@+id/iv_icon" android:layout_width="@dimen/icon_size_l" android:layout_height="@dimen/icon_size_l" android:adjustViewBounds="true" android:layout_centerHorizontal="true" android:contentDescription="@null" app:srcCompat="@drawable/vector_uptodown_logo_disabled"/>
        <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/text_primary" android:id="@+id/tv_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_m" android:layout_marginBottom="@dimen/margin_m" android:text="@string/app_name" android:layout_below="@+id/iv_icon" android:layout_centerHorizontal="true" android:layout_marginVertical="@dimen/margin_m"/>
    </RelativeLayout>
</RelativeLayout>
